                        <a href="{% url 'searchdaydetails' %}" class="btn btn-light" style="background-color: inherit;border: none;text-decoration: none;color: inherit;">Jours avec pics d'emails</a>
                    </div>
                </div>  
            </div>
            
            <div class="col">
                <div class="card bg-light rounded-pill" style="padding: 0;">
                    <div class="card-body">
                        <a href="{% url 'rechercheEmail' %}" class="btn btn-light" style="background-color: inherit;border: none;text-decoration: none; color: inherit;"> Rechercher par mots-clés</a>
                    </div>
                </div>  
            </div>

            <div class="col">
                <div class="card bg-light rounded-pill" style="padding: 0;">
                    <div class="card-body">
                        <a href="#" class="btn btn-light" style="background-color: inherit;border: none;text-decoration: none;color: inherit;"> 
                            <button type="button" data-bs-placement="bottom" data-bs-toggle="tooltip" title="Non fonctionnel pour le moment" style="background-color: inherit; border: none; text-decoration: none; color: inherit;">
                                Visualiser une conversation
                            </button>
                        </a>
                    </div>
                </div> 
            </div>
            
        </div>
    </div>
    <div class="d-flex justify-content-center mt-5">  
        <div>
            <button type="button" class="btn btn-outline-primary">
                <a href='{% url "accueil" %}' style="background-color: inherit; border: none; text-decoration: none; color: inherit;"> retour </a>
            </button>
        </div>
    </div>

    <script>
        var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'))
        var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
          return new bootstrap.Tooltip(tooltipTriggerEl)
        })
        </script>
</body>
</html>